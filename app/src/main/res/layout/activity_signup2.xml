<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:text=" Crear Usuario"
        android:textColor="#0275d8"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />
    <LinearLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de Usuario"
            android:textColor="#232526"
            />

        <EditText
            android:id="@+id/txt_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bordered"
            android:hint="Escriba nombre de Usuario..."
            android:drawableEnd="@drawable/ic_check"
            android:paddingEnd="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Contrase単a"
            android:textColor="#232526"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/txt_contrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bordered"
            android:hint="Escriba su contrase単a..."
            android:drawableEnd="@drawable/ic_check"
            android:paddingEnd="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Confirmar Contrase単a"
            android:textColor="#232526"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/txt_confirmarContrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_bordered"
            android:hint="Escriba su contrase単a..."
            android:drawableEnd="@drawable/ic_check"
            android:paddingEnd="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_terminos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acepto los"
                android:textColor="@color/subtitulos"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="terminos"
                android:textColor="@color/botones"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"
                android:textColor="@color/subtitulos"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="condiciones de uso"
                android:textColor="@color/botones"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:backgroundTint="#0275d8"
            android:text="Registrar"
            />

        <Button
            android:id="@+id/btn_regresar"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:backgroundTint="#E32239"
            android:text="Regressar"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>