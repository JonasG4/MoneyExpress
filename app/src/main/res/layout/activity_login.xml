<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/principal" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/logotipo" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="360dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="120dp"
            android:background="@drawable/layout_box"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_saludo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/sun" />

                <TextView
                    android:id="@+id/txtSaludo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/day"
                    android:textColor="@color/titulos"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo electronico"
                    android:textColor="@color/titulos" />

                <EditText
                    android:id="@+id/txt_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_bordered"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="15dp"
                    android:hint="@string/input_correo"
                    android:inputType="text"
                    android:paddingStart="10dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/titulos"
                    android:textColorHint="@color/input"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:endIconMode="clear_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Contraseña"
                    android:textColor="@color/titulos" />

                <EditText
                    android:id="@+id/txt_contrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/input_bordered"
                    android:drawableStart="@drawable/ic_key"
                    android:drawableEnd="@drawable/ic_mostrartxt"
                    android:drawablePadding="15dp"
                    android:hint="@string/input_contrasenia"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/titulos"
                    android:textColorHint="@color/input"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_cambiarContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="¿Se te olvidó tu contraseña?"
                    android:textAlignment="textEnd"
                    android:textColor="@color/botones"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_iniciarSesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/botones"
                    android:text="Iniciar sesion"
                    app:cornerRadius="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="¿No tienes cuenta?"
                        android:textAlignment="textEnd"
                        android:textColor="@color/Iconos" />

                    <TextView
                        android:id="@+id/btn_registroView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Registrate aquí"
                        android:textColor="@color/botones" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
